<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Button
        android:id="@+id/arrayadapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ArrayAdapter"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/mAutoCompleteBtn"
        android:layout_alignEnd="@+id/mAutoCompleteBtn" />
    <Button
        android:id="@+id/simpleadapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="SimpleAdapter"
        android:layout_above="@+id/mUpdateAdapter"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/mBaseAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="BaseAdapter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/mUpdateAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="更新适配器"
        android:layout_below="@+id/arrayadapter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/mExpandViewBtn"
        android:layout_alignRight="@+id/arrayadapter"
        android:layout_alignEnd="@+id/arrayadapter" />
    <Button
        android:id="@+id/mGridViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="测试GridView"
        android:layout_alignTop="@+id/mUpdateAdapter"
        android:layout_alignLeft="@+id/simpleadapter"
        android:layout_alignStart="@+id/simpleadapter"
        android:layout_alignRight="@+id/simpleadapter"
        android:layout_alignEnd="@+id/simpleadapter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="测试Spinner"
        android:id="@+id/mSpinnerBtn"
        android:layout_alignBottom="@+id/mGridViewBtn"
        android:layout_alignRight="@+id/mBaseAdapter"
        android:layout_alignEnd="@+id/mBaseAdapter"
        android:layout_alignLeft="@+id/mBaseAdapter"
        android:layout_alignStart="@+id/mBaseAdapter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutoComplete"
        android:textAllCaps="false"
        android:id="@+id/mAutoCompleteBtn"
        android:layout_below="@+id/mUpdateAdapter" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试ExpandView"
        android:textAllCaps="false"
        android:id="@+id/mExpandViewBtn"
        android:layout_below="@+id/mGridViewBtn"
        android:layout_alignLeft="@+id/mGridViewBtn"
        android:layout_alignStart="@+id/mGridViewBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Flipper"
        android:id="@+id/flipper_btn"
        android:layout_alignTop="@+id/mExpandViewBtn"
        android:layout_alignLeft="@+id/mSpinnerBtn"
        android:layout_alignStart="@+id/mSpinnerBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="动态Flipper"
        android:id="@+id/dynamic_flipper_btn"
        android:layout_below="@+id/mAutoCompleteBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast"
        android:id="@+id/toastBtn"
        android:layout_below="@+id/mExpandViewBtn"
        android:layout_alignLeft="@+id/mExpandViewBtn"
        android:layout_alignStart="@+id/mExpandViewBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Notification"
        android:id="@+id/notify_btn"
        android:layout_below="@+id/flipper_btn"
        android:layout_alignLeft="@+id/flipper_btn"
        android:layout_alignStart="@+id/flipper_btn" />
</RelativeLayout>

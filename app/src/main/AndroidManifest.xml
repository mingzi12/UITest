<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mingzi.uitest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArrayAdapterActivity"
            android:label="@string/title_activity_adapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SimpleAdapterActivity"
            android:label="@string/title_activity_simple_adapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BaseAdapterActivity"
            android:label="@string/title_activity_base_adapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateListViewActivity"
            android:label="@string/title_activity_update_list_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".gridview.GridViewActivity"
            android:label="@string/title_activity_grid_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
